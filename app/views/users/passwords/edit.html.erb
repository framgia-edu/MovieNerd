<% provide :title, t("reset_mail.title") %>
<h1><%= t "reset_mail.title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name,
      url: password_path(params[:id]), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password, t("forgot_password.new_pass") %><br/>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br/>
      <% end %>
      <%= f.password_field :password, autofocus: true,
        autocomplete: "new-password", class: "form-control" %>

      <%= f.label :password_confirmation, t("forgot_password.confirmation") %>
      <br/>
      <%= f.password_field :password_confirmation, autocomplete: "off",
        class: "form-control" %>

      <%= f.submit t("forgot_password.update"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


<%= render "users/shared/links" %>
