<div class="top_header">
  <div class="wrapper">
    <div class="right_top fr">
      <ul>
         <li><%= link_to t(:english), locale:"en"%></li>
          <li><%= link_to t(:vietnamese), locale:"vi"%></li>
      </ul>
    </div>
    <div class="right_top fr">
      <% if logged_in? %>
        <li class="dropdown">
          <%= link_to t(".greeting", name: current_user.name), "#",
            {"class": "dropdown-toggle", "data-toggle": "dropdown"} %>
            <b class="caret"></b>
          <ul class="dropdown-menu">
            <% if current_user.admin? || current_user.mod? %>
              <li><%= link_to t(".admin"), admin_path %></li>
            <% end %>
            <li><%= link_to t(".profile"), current_user %></li>
            <li>
              <%= link_to t(".settings"), edit_user_path(current_user) %>
            </li>
            <li>
              <%= link_to t(".logout"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <ul class="select-language">
          <li class="register_top_header">
            <%= link_to t(".signup"), signup_path%></li>
          <li>|</li>
          <li class="login_top_header">
            <%= link_to t(".login"), login_path %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<div class="header" >
  <div class="main_nav">
    <div class="nav fl">
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to t(".home"), root_path %></li>
        <li class="dropdown">
          <%= link_to t(".movie"), "#",
            {"class": "dropdown-toggle", "data-toggle": "dropdown"} %>
          <ul class="dropdown-menu">
            <li><%= link_to t(".now_showing"), "#" %></li>
            <li><%= link_to t(".coming_soon"), "#" %></li>
          </ul>
        </li>
        <li><%= link_to t(".screening"), schedules_path %></li>
        <li><%= link_to t(".price"), price_path %></li>
        <li><%= link_to t(".about"), about_path %></li>
        <li>
          <div id="header-search" class="skip-content">
            <div class="header-search-left">
              <%= form_tag searchs_path, class: "form-inline" do %>
                <%= label_tag :keyword, t("searchs.search"), class: "search" %>
                <%= text_field_tag :keyword, @keyword, class: "input form-control" %>
              <% end %>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
